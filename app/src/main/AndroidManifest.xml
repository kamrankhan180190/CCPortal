<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kamrankhan.pstapplication">

    <uses-permission android:name="android.permission." />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity_rootfolders"
            android:label="@string/title_activity_activity_rootfolders"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_childfolders"
            android:label="@string/title_activity_activity_childfolders"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_subchildfolder"
            android:label="@string/title_activity_activity_subchildfolder"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_compose_email"
            android:label="@string/title_activity_activity_email"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_reply_email"
            android:label="@string/title_activity_reply_email"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_forward_email"
            android:label="@string/title_activity_forward_email"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity_replyall_email"
            android:label="@string/title_activity_replyall_email"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>